{
    "name": "minecraft-bedrock-creators-utilities",
    "displayName": "minecraft-bedrock-creators-utilities",
    "description": "VS Code tools for Minecraft Bedrock add-on development",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.100.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],  
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "minecraft-bedrock-creators-utilities.helloWorld",
                "title": "Hello World",
                "category": "Minecraft Bedrock Utilities"
            },
            {
                "command": "minecraft-bedrock-creators-utilities.initEnvironment",
                "title": "Initialiser un projet Minecraft Bedrock",
                "category": "Minecraft Bedrock Utilities"
            },
            {
                "command": "minecraft-bedrock-creators-utilities.deployProject",
                "title": "D√©ployer le projet Minecraft Bedrock courant",
                "category": "Minecraft Bedrock Utilities"
            },
            {
                "command": "minecraft-bedrock-creators-utilities.toggleWatchDeploy",
                "title": "Activer/D√©sactiver le d√©ploiement automatique du projet Minecraft Bedrock",
                "category": "Minecraft Bedrock Utilities"
            },
            {
                "command": "minecraft-bedrock-creators-utilities.openMolangEditor",
                "title": "Ouvrir l'√©diteur Molang",
                "category": "Minecraft Bedrock Utilities"
            },
            {
                "command": "minecraft-bedrock-creators-utilities.openMinecraftStablePacksFolder",
                "title": "üìÇ Ouvrir le dossier des packs Minecraft Stable",
                "category": "Minecraft Bedrock Utilities"
            },
            {
                "command": "minecraft-bedrock-creators-utilities.openMinecraftPreviewPacksFolder",
                "title": "üìÇ Ouvrir le dossier des packs Minecraft Preview",
                "category": "Minecraft Bedrock Utilities"
            },
            {
                "command": "minecraft-bedrock-creators-utilities.openMinecraftStableVanillaFolder",
                "title": "üìÇ Ouvrir les ressources vanilla Minecraft Stable",
                "category": "Minecraft Bedrock Utilities"
            },
            {
                "command": "minecraft-bedrock-creators-utilities.openMinecraftPreviewVanillaFolder",
                "title": "üìÇ Ouvrir les ressources vanilla Minecraft Preview",
                "category": "Minecraft Bedrock Utilities"
            },
            {
                "command": "minecraft-bedrock-creators-utilities.clearCaches",
                "title": "üßπ Vider les caches de performance",
                "category": "Minecraft Bedrock Utilities"
            },
            {
                "command": "minecraft-bedrock-creators-utilities.showCacheStats",
                "title": "üìä Afficher les statistiques des caches",
                "category": "Minecraft Bedrock Utilities"
            },
            {
                "command": "minecraft-bedrock-creators-utilities.enablePerformanceMonitoring",
                "title": "üîç Activer le monitoring de performance",
                "category": "Minecraft Bedrock Utilities"
            },
            {
                "command": "minecraft-bedrock-creators-utilities.disablePerformanceMonitoring",
                "title": "‚èπÔ∏è D√©sactiver le monitoring de performance",
                "category": "Minecraft Bedrock Utilities"
            },
            {
                "command": "minecraft-bedrock-creators-utilities.showPerformanceReport",
                "title": "üìà Afficher le rapport de performance",
                "category": "Minecraft Bedrock Utilities"
            }
        ],
        "jsonValidation": [
            {
                "fileMatch": [
                    "**/behavior_pack/**/*.json",
                    "**/resource_pack/**/*.json",
                    "**/addon/**/*.json"
                ],
                "url": "./schemas/empty.schema.json"
            }
        ],
        "languages": [
            {
                "id": "molang",
                "aliases": ["Molang", "molang"],
                "extensions": [".molang"],
                "icon": {
                    "dark": "./resources/molang_icon.png",
                    "light": "./resources/molang_icon.png"
                }
            }
        ],
        "grammars": [
            {
                "language": "molang",
                "scopeName": "source.molang",
                "path": "./syntaxes/molang.tmLanguage.json"
            }
        ],
        "configuration": {
            "title": "Minecraft Bedrock Creators Utilities",
            "properties": {
                "minecraftBedrockUtilities.deployProject.promptToLaunchMinecraft": {
                    "type": "boolean",
                    "default": true,
                    "description": "Proposer de lancer Minecraft apr√®s un d√©ploiement r√©ussi"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/lodash": "^4.17.20",
        "@types/micromatch": "^4.0.9",
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.100.0",
        "@typescript-eslint/eslint-plugin": "^8.31.1",
        "@typescript-eslint/parser": "^8.31.1",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.5.2",
        "eslint": "^9.25.1",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "@minecraft/vanilla-data": "^1.21.90",
        "ajv": "^8.17.1",
        "jsonc-parser": "^3.3.1",
        "lodash": "^4.17.21",
        "micromatch": "^4.0.8",
        "vscode-json-languageservice": "^5.6.0"
    }
}
